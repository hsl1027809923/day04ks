<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/dlzc"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="160dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher_round"
            android:layout_height="20dp" />
        <EditText
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp"
            android:hint="手机号"
            android:id="@+id/login_sj"
            android:textColorHint="#FAF9F9"
            android:textColor="#F5F0F0"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher_round"
            android:layout_height="20dp" />
        <EditText
            android:id="@+id/login_pwd"
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp"
            android:hint="登陆密码"
            android:textColorHint="#FAF9F9"
            android:textColor="#F5F0F0"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/login_check"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#F8F6F6"
                android:text="记住密码"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:textColor="#F7F3F3"
            android:text="快速注册"
            android:id="@+id/login_text"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:text="登陆"
        android:textColor="#ff66"
        android:id="@+id/login_but"
        android:layout_width="280dp"
        android:background="@drawable/myshap"
        android:layout_height="40dp" />

</LinearLayout>