<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Order_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#F52323"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:background="@drawable/gwc"
            android:id="@+id/order_img"
            android:layout_gravity="center_horizontal"
            android:layout_height="100dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="登陆/注册"
            android:id="@+id/order_name"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:text="我的订单"
            android:textColor="#111010"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:text="全部"
            android:layout_weight="1"
            android:id="@+id/order_text1"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="待付款"
            android:id="@+id/order_text2"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="待收货"
            android:layout_weight="1"
            android:id="@+id/order_text3"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="待评价"
            android:layout_weight="1"
            android:id="@+id/order_text4"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="已完成"
            android:id="@+id/order_text5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/order_review"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>